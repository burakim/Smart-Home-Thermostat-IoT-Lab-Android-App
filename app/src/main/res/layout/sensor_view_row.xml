<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="126dp"

    android:layout_margin="6dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/variable_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/temperature"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/variable_value"
                android:layout_width="178dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="94.6dp"
                android:layout_weight="3"
                android:text="84  Â°F"
                android:textAlignment="center"
                android:textColor="#DE000000"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="66dp"
                android:gravity="center"

                android:layout_height="65dp">

                <TextView
                    android:id="@+id/variable_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:background="@mipmap/temperature"
                    android:text="" />
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/date_time_view"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:text="09/23/2017 04:23 PM"
            android:textSize="14sp"
            android:textAlignment="textEnd" />

    </LinearLayout>


